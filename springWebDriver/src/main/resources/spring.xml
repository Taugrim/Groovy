<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:util="http://www.springframework.org/schema/util"
       xmlns:p="http://jboss.org/xml/ns/javax/validation/mapping"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">
    <bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="locations">
            <list>
                <value>
                                        classpath:prop.properties
                </value>
            </list>
        </property>
        <property name="ignoreResourceNotFound" value="true"/>
        <property name="systemPropertiesModeName" value="SYSTEM_PROPERTIES_MODE_OVERRIDE"/>
    </bean>
    <bean id="DriverFactory" name="DriverFactory" class="implemet.DF">
        <constructor-arg index="0"
                         value="C:\\gitTaugrim\\root\\springWebDriver\\src\\main\\resources\\chromedriver.exe"/>

    </bean>
    <bean id="P" name="P" class="pages.P">
        <property name="url" value="${url}"/>
    </bean>
 <bean id="KMPage" name="km" class="pages.KMPage">
        <constructor-arg ref="DriverFactory"/>
        <property name="url" value="${url}"/>
    </bean>
</beans>